separator=true
separator_block_width=15

[iface]
command=$XDG_DATA_HOME/i3blocks-contrib/iface/iface
interval=10

[battery]
command=battery BAT0
interval=30

[volume]
command=clickblock wpvol mon
interval=persist
LEFT_CLICK=wpvol toggle
RIGHT_CLICK=pavucontrol
SCROLL_UP=wpvol adj=5
SCROLL_DOWN=wpvol adj=-5

[time]
command=date '+%a %d %b %H:%M'
interval=60
