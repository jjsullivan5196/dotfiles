# Volume keys
XF86Audio{LowerVolume,RaiseVolume}
  pactl set-sink-volume '@DEFAULT_SINK@' {-5%,+5%}

XF86AudioMute
  pactl set-sink-mute 0 toggle

# Run programs
super + r
  dmenu_run

# VTE
super + shift + Return
  eval $TERMINAL

# Editor
super + Return
  eval $QTERM

# Screenshot
super + @Print
  scrgrab

Print
  scrot "$HOME/pics/screen/%Y-%m-%d-%H:%M:%S_$wx$h.png"

# Screen lock
super + End
  physlock -d

# Exit session
super + shift + e
  dmenu_prompt "Are you sure you want to exit xorg?" pkill xinit
